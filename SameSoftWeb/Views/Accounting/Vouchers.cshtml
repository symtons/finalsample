                                        .fab.fab-light:after {
                                            background: #e6e6e6;
                                        }

                                        .fab.fab-stable:after {
                                            background: #dfdfdf;
                                        }

                                        .fab.fab-positive:after {
                                            background: #144d76;
                                        }

