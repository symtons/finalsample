                                            <table class="br">
                                                <tr style="font-weight:bold;">
                                                    <td style="border:1px;border-color:white;">
                                                        Company Name:<b> @customer.Customer_Name</b><br>
                                                        Contect : :<b> @customer.Contact_Numbers</b><br>
                                                        Address:<b> @customer.Address</b>

