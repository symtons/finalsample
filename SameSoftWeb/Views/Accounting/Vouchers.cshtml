                                                Qtyin = Inventory.Qty_Out;
                                                Pricein = Inventory.Sales_price;
                                            }

                                            TotalAmount = total + (float)x.Balance;

                                            inwords = SameSoftWeb.helper.mnc.ToWords(TotalAmount.ToString());
